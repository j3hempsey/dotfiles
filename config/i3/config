exec_always --no-startup-id xrdb $HOME/.Xresources
# Start compositor
exec --no-startup-id compton -b --config $HOME/.config/compton/compton.conf
# Fix key repeat/delay
exec_always --no-startup-id xset r rate 300 35 # Set initial delay 300ms, repeat 35ms
# Set background
exec --no-startup-id feh --bg-fill $HOME/Nextcloud/Pictures/Mach\ 1\ -\ Random/IMG_20180315_180728.jpg
# Setup displays
exec --no-startup-id xrandr --output HDMI-A-0 --primary  --mode 2560x1440 --rate 60.00 --output DisplayPort-0 --mode 1920x1080 --rate 60.00 --right-of HDMI-A-0
exec --no-startup-id sleep .5 && /bin/bash $HOME/dotfiles/bin/launch_polybar
# Startup dunst
exec --no-startup-id dunst -config $HOME/.config/dunst/dunstrc &
# NextCloud startup
exec --no-startup-id nextcloud
